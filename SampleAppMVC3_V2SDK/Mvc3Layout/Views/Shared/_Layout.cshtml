<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("https://js.appcenter.intuit.com/Content/IA/intuit.ipp.anywhere.js")"></script>
    <script type="text/javascript">
        intuit.ipp.anywhere.setup({
            menuProxy: '<%=  Request.Url.GetLeftPart(UriPartial.Authority) + "/" + "MenuProxy/Index"  %>',
            grantUrl: '<%=  Request.Url.GetLeftPart(UriPartial.Authority) + "/" + "OAuthGrant/OAuthGrant"  %>'
        });

</script>
    <script type="text/javascript">
<!--
        function confirmPost(url) {
            var agree = confirm("You will no longer be able to access QuickBooks data. Continue?");
            if (agree)
                window.location = url;
            else
                return false;
        }
// -->
    </script>
    <style type="text/css">
        #errorDiv
        {
            border: 3px solid Red;
            color: Red;
            padding: 25px;
        }
    </style>    
</head>

<body>


        <div class="header">
        <div id= "header">
        @RenderSection("head", required: false)
            <div class="title">
                <h1>
                    My Intuit Anywhere Application
                </h1>
                <!-- Blue Dot Menu -->
                <div id="blueDotDiv">
                    @RenderSection("blueDotDiv", required: false)  
                    
                </div>
            </div>
            <div class="clear hideSkiplink">                
              <ul id="NavigationMenu" class="menu">
                <li>@Html.ActionLink("Home", "Index", "Home")                
                </li>
              </ul>
            </div>
           </div>
        </div>
        <div class="main">
    
      
       
            <div id="errorDiv">
            
            @RenderSection("errorDiv", required: false)  
                
            </div>
             
           
            <div id="mainContentDiv">
            @RenderSection("mainContentDiv", required: false)  
             
            </div>
             
            <div id="main1">
               @RenderBody()
            </div>
        <div class="clear">
        </div>
    </div>
    <div class="footer">
    </div>
   
</body>
</html>
